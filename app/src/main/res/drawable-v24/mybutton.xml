<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="9dip" />
            <stroke android:width="2dip" android:color="#FFFFFF" />
            <gradient android:angle="315" android:startColor="#FF0000" android:centerColor="#960000" android:endColor="#FF3030"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="9dip" />
            <stroke android:width="2dip" android:color="#FFFFFF" />
            <gradient android:angle="315" android:startColor="#FF3030" android:centerColor="#960000" android:endColor="#FF0000"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >

            <corners android:radius="9dip" />
            <stroke android:width="2dip" android:color="#FFFFFF" />
            <gradient android:angle="315" android:startColor="#FF3030" android:centerColor="#960000" android:endColor="#FF0000"  />
        </shape>
    </item>
</selector>